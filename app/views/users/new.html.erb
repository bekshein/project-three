<h4>New Post</h4>

<%= form_for(@user, html: {multipart: true}) do |f| %>
  <ul>
  <% @user.errors.full_messages.each do |error| %>
    <li><%= error %></li>
  <% end %>
  </ul>
  
  <p>
    <%= f.label :username  %><br/>
    <%= f.text_field :username %>
  </p>

  <p>
    <%= f.label :email  %><br/>
    <%= f.text_field :email  %>
  </p>

  <p>
    <%= f.label :password_digest %><br />
    <%= f.password_field :password_digest %>
  </p>

  <p>  
    <%= f.submit %>
  </p>
<% end %>